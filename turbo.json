{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "Makefile",
    "package.json",
    "tsconfig.json",
    "rollup.config.ts",
    "rollup.config.js"
  ],
  "pipeline": {
    "deploy": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "CI_COMMIT_TAG",
        "CI_COMMIT_BRANCH",
        "DOCKER_REGISTRY",
        "IMAGE_REGISTRY"
      ],
      "inputs": [
        "deploy.sh",
        "docker-bake.hcl",
        "Dockerfile",
        "builds/docker-bake.hcl",
        "builds/*/Dockerfile"
      ],
      "outputs": []
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "lib/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "inputs": [
        "build.sh",
        "src/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.css"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}

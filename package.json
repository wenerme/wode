{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "type": "module",
  "description": "Wener Node Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "author": "wener",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "packageManager": "pnpm@7.12.0+",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0",
    "pnpm": ">=7.0.0"
  },
  "keywords": [],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "ava": "^4.3.3",
    "esbuild": "^0.15.10",
    "eslint": "^8",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.31.8",
    "globby": "^13.1.2",
    "jsdom": "^20.0.0",
    "node-fetch": "*",
    "prettier": "latest",
    "prettier-plugin-pkg": "^0.17.1",
    "rollup": "3.0.0-6",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-visualizer": "^5.8.2",
    "tsx": "^3.8.2",
    "turbo": "^1.5.5",
    "typedoc": "^0.23.15",
    "typescript": "*"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--conditions=typescript",
      "--require=@wener/wode/suppress-experimental.cjs",
      "--loader=tsx"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}

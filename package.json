{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "type": "module",
  "description": "Wener Node Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "author": "wener",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "packageManager": "pnpm@7.12.0+",
  "engines": {
    "node": "16||18",
    "npm": ">=7.0.0",
    "pnpm": ">=7.0.0"
  },
  "keywords": [],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^24.1.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@vitest/ui": "^0.30.1",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "daisyui": "^2.51.5",
    "esbuild": "^0.17.16",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^32.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "globby": "^13.1.4",
    "jsdom": "^21.1.1",
    "node-fetch": "^3.3.1",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.8.7",
    "prettier-plugin-pkg": "^0.17.1",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "rollup": "^3.20.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "tailwindcss": "^3.3.1",
    "tsx": "^3.12.6",
    "turbo": "^1.9.1",
    "typedoc": "^0.24.1",
    "typescript": "^4.9.5",
    "vitest": "^0.30.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--conditions=typescript",
      "--require=@wener/wode/suppress-experimental.cjs",
      "--loader=tsx"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}

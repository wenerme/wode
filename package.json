{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "type": "module",
  "description": "Wener Node Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "author": "wener",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.5.0+",
  "engines": {
    "node": ">=18",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/cli": "^0.1.65",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.7",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitest/ui": "^1.2.1",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "better-sqlite3": "^9.3.0",
    "daisyui": "^4.6.0",
    "esbuild": "^0.19.12",
    "globby": "^14.0.0",
    "jsdom": "^23.2.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "prettier": "^3.2.4",
    "prettier-plugin-pkg": "^0.18.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rollup": "^4.9.6",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-license": "^3.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "ts-add-js-extension": "^1.6.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "turbo": "^1.11.3",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "xo": "^0.56.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "@swc/core": "1.3.81"
    }
  }
}

{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "type": "module",
  "description": "Wener Node Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "author": "wener",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.5.0+",
  "engines": {
    "node": "18",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@swc/cli": "^0.1.62",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.9",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.16",
    "@types/react": "^18.2.8",
    "@types/react-dom": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@vitest/ui": "^0.31.4",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "daisyui": "^3.0.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "globby": "^13.1.4",
    "jsdom": "^22.1.0",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "prettier": "^2.8.8",
    "prettier-plugin-pkg": "^0.17.1",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rollup-plugin-license": "^3.0.1",
    "rollup-plugin-visualizer": "^5.9.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "turbo": "^1.10.1",
    "typedoc": "^0.24.7",
    "typescript": "^5.1.3",
    "vitest": "^0.31.4"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--conditions=typescript",
      "--require=@wener/wode/suppress-experimental.cjs",
      "--loader=tsx"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "fastify": "^4.17.0"
    },
    "packageExtensions": {
      "@nestjs/platform-fastify": {
        "dependencies": {
          "fastify": "*"
        }
      },
      "@nestjs/mercurius": {
        "peerDependencies": {
          "mercurius": "*"
        }
      }
    }
  }
}

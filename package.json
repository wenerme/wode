{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "description": "Wener Node Monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "keywords": [],
  "author": "wener",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/jsdom": "^20.0.0",
    "@types/node": "^16",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "ava": "^4.3.3",
    "esbuild": "^0.15.10",
    "eslint": "^8.24.0",
    "globby": "^13.1.2",
    "jsdom": "^20.0.0",
    "node-fetch": "*",
    "prettier": "latest",
    "prettier-plugin-pkg": "^0.17.1",
    "rollup": "3.0.0-6",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-visualizer": "^5.8.2",
    "tsx": "^3.8.2",
    "turbo": "^1.5.5",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "engines": {
    "pnpm": ">=7.0.0",
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--conditions=typescript",
      "--require=@wener/wode/suppress-experimental.cjs",
      "--loader=tsx"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "packageManager": "pnpm@7.12.0+"
}

{
  "name": "@wener/wode-root",
  "version": "1.0.0",
  "type": "module",
  "description": "Wener Node Monorepo",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wenerme/wode.git"
  },
  "homepage": "https://github.com/wenerme/wode#readme",
  "bugs": {
    "url": "https://github.com/wenerme/wode/issues"
  },
  "author": "wener",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "components/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.5.0+",
  "engines": {
    "node": "18",
    "npm": ">=9.0.0",
    "pnpm": ">=8.0.0"
  },
  "keywords": [],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.5",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@swc/cli": "^0.1.62",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^18.18.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@vitest/ui": "^0.34.6",
    "@wener/wode": "workspace:*",
    "@wener/wode-root": "workspace:*",
    "daisyui": "^3.9.2",
    "esbuild": "^0.19.4",
    "globby": "^13.2.2",
    "jsdom": "^22.1.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "prettier": "^3.0.3",
    "prettier-plugin-pkg": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "rollup-plugin-license": "^3.1.0",
    "rollup-plugin-visualizer": "^5.9.2",
    "tailwindcss": "^3.3.3",
    "ts-add-js-extension": "^1.6.0",
    "ts-node": "^10.9.1",
    "tsx": "^3.13.0",
    "turbo": "^1.10.15",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6",
    "xo": "^0.56.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
